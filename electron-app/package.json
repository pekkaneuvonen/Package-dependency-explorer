{
  "name": "package-dependency-explorer",
  "appId": "org.neuvonen.${name}",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "main": "build/electron/main.js",
  "author": {
    "name": "Pekka Neuvonen",
    "email": "pekka@alho.net"
  },
  "copyright": "Copyright Â© 2020 ${author}",
  "description": "Simple React-TypeScript-Electron desktop app exercise",
  "build": {
    "appId": "org.neuvonen.${name}",
    "productName": "Package Dependency Explorer",
    "extends": null,
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "./public/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "icon": "./public/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "icon": "./public/icon.ico"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.54",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-transition-group": "^4.4.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-is-dev": "^1.2.0",
    "electron-reload": "^1.5.0",
    "gsap": "^3.5.1",
    "mobx": "^5.15.6",
    "mobx-react": "^6.3.0",
    "node-sass-chokidar": "^1.5.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-gsap": "^2.2.1",
    "react-scripts": "3.4.3",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "electron:build": "yarn build && tsc -p electron && electron-builder -mwl",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "^9.2.1",
    "electron-builder": "^22.8.0",
    "fibers": "^5.0.0",
    "sass": "^1.26.10",
    "wait-on": "^5.2.0"
  }
}
